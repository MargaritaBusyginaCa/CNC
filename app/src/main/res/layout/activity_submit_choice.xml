<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".submit.SubmitChoiceActivity">

    <Button
        android:id="@+id/bt_submit_email"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="@string/SubmitViaEmail"

        />

    <Button
        android:id="@+id/bt_submit_ms"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/bt_submit_email"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="@string/SubmitViaMS"
        />

</RelativeLayout>