<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp" >

<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_centerInParent="true"
    android:id="@+id/selectedImg1" />

<ImageButton
    android:id="@+id/delImgButton1"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_toRightOf="@id/selectedImg1"
    android:background="@drawable/submit_picturedelete"
    android:textColor="#fff" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:id="@+id/selectedImg2" />

    <ImageButton
        android:id="@+id/delImgButton2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/selectedImg2"
        android:background="@drawable/submit_picturedelete"
        android:textColor="#fff" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:id="@+id/selectedImg3" />

    <ImageButton
        android:id="@+id/delImgButton3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/selectedImg3"
        android:background="@drawable/submit_picturedelete"
        android:textColor="#fff" />
</RelativeLayout>