<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:id="@+id/alert_submit"
        android:src="@drawable/assi_alert_submit_pic"
        />


    <TextView
        android:id="@+id/alert_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="20dp"
        android:text="@string/alertSubmitExercise1"
        android:gravity="center"
        />


    
    <TextView
        android:id="@+id/alert_title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20dp"
        android:text="@string/alertSubmitExercise2"
        android:gravity="center"
        />


    <TextView
        android:id="@+id/alert_title4"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="20dp"
        android:text="@string/wantExit"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/yesno_Button"
        android:clickable="true"
        android:layout_marginTop="30dp"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/exitAnyway"
            android:text="Yes! Exit anyway!"
            android:clickable="true"
            android:background="#FF6278"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/design_default_color_error"
            />

        <Button
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/cancel"
            android:text="Cancel"
            android:clickable="true"
            android:background="#2fffe2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/design_default_color_error"/>
    </LinearLayout>
</LinearLayout>